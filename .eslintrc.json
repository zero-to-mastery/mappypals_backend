{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["standard", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        "linebreak-style": ["error", "unix"],
        "quotes": ["warn", "single"],
        "indent": ["warn", 4]
    }
}
